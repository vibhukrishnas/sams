{
  "auth": {
    "api_key": "your-api-key-here",
    "server_url": "https://your-sams-server.com",
    "agent_id": "unique-agent-id",
    "verify_ssl": true
  },
  "collection": {
    "interval": 60,
    "retry_attempts": 3,
    "retry_delay": 5,
    "batch_size": 100
  },
  "metrics": {
    "cpu": true,
    "memory": true,
    "disk": true,
    "network": true,
    "process": true
  },
  "transport": {
    "compress": true,
    "compression_level": 6,
    "max_buffer_size": 1000,
    "timeout": 30
  },
  "logging": {
    "level": "INFO",
    "file": "sams_agent.log",
    "max_size": 10485760,
    "backup_count": 5
  },
  "security": {
    "encrypt_data": true,
    "encryption_algorithm": "AES-256-CBC",
    "key_rotation_interval": 86400
  }
}
