{
  "name": "sams",
  "version": "1.0.0",
  "description": "Server and Application Monitoring System - A comprehensive monitoring solution",
  "private": true,
  "workspaces": [
    "SAMSMobileExpo",
    "backend/*",
    "infrastructure-monitoring-system"
  ],
  "scripts": {
    "start:mobile": "cd SAMSMobileExpo && npm start",
    "start:backend": "cd backend/nodejs-express && npm start",
